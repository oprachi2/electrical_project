{% extends 'base.html.twig' %}

{% block title %} Home{% endblock %}
{% block front_nav_right_section %}{% endblock %}

{% block body %}
<div id="container">
  
            <br/><br/>
            <div class="slider">
                <div id="slider-inner" class="vertical"> <!-- To make the slider vertical add the class attribute with vertical i.e. class="vertical" in this div tag -->
                    <div class="slide-box first">
                        <img id="pic1" src="/uploads/images/p1.jpg">
                        <div class="text-overlay">
                           
                            <h3></h3>
                        </div>
                    </div>
                    <div class="slide-box other">
                        <img id="pic2" src="/uploads/images/p2.jpg">
                        <div class="text-overlay">
                           
                            <h3></h3>
                        </div>
                    </div>
                    <div class="slide-box other">
                        <img id="pic3" src="/uploads/images/p3.png">
                        <div class="text-overlay">
                           
                            <h3></h3>
                        </div>
                    </div>
                    <div class="slide-box other">
                        <img id="pic4" src="/uploads/images/p4.jpg">
                        <div class="text-overlay">
                           
                            <h3></h3>
                        </div>
                    </div>
                    <div class="slide-box other">
                        <img id="pic5" src="/uploads/images/p5.jpg">
                        <div class="text-overlay">
                           
                            <h3></h3>
                        </div>
                    </div>
                </div>
                <div class="pause-overlay"></div>
            
        </div>
 <div class="row" style="margin-top:30px">
        <div class="row">
            {% for product in products %}
                <div class="col-md-6">
                    <div class="jumbotron">
                        <div class="col-sm-8">
                            <div class="card-body d-flex flex-column align-items-start">
                                {# <strong class="d-inline-block mb-2 text-primary">World</strong> #}
                                <h3 class="mb-0">
                                    <a class="text-dark" href="{{path('show_product', {id: product.getId()})}}">{{product.getName()}}</a>
                                </h3>
                                <div class="mb-1 text-muted">{{product.getCreatedAt()|date(date_format)}}</div>
                                <p class="card-text mb-auto">{{product.getColor()|striptags|slice(0, 50)}}</p>
                                <a href="{{path('show_product', {id: product.getId()})}}">Continue reading</a>
                            </div>
                        </div>
                        {# <div class="col-sm-4"><img src="{{('uploads/product/' ~ product.getImage()) }}" width="170px" height="60px" alt="logo"></div> #}
                        <div class="col-sm-4"><img data-src="holder.js/200x250?theme=thumb" width="170px" height="150px" alt="Thumbnail [200x250]" style="max-width: 100%;" src="{{('uploads/images/' ~ product.getImage()) }}" data-holder-rendered="true"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{% endblock %}